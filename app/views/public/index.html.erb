    <div class="row">
        <div class="col-8 mt-4">
            <p class="h4"> Popular Posts </p>
                <%= render partial: "posts/list" , locals: { posts: @posts }%>
            </div>
        <div class="col-4 mt-4">
            <p class="h5" mb-4>Most Popular Courses!</p>
            <div class="card">
                <ul class="list-group list-group-flush">
                    <% @courses.each do |course| %>
                        <li class="list-group-item"><%= link_to course.name, course_path(course) %> </li> 
                    <% end %>
                </ul> 
            </div>
            <%= link_to "View all courses", courses_path, class: "btn btn-outline-primary mt-3"%>

        </div>
    </div>
