
<% if @is_subscribed %>
    <%= link_to "Create New Post", new_course_post_path(@course), class: "btn btn-primary float-right m-3"%>
<% else %>
    <%= render partial: "courses/subscribe", locals: { course_id: @course.id} %>
<% end %>

<h3 class="p-2 mt-3"><%= @course.name%></h3>

<div class="row">
    <div class="col-sm-8">
        <div class="">

            <% @posts.each do |post| %>
                <div class="card p-2">
                    <h4><%= link_to post.title, course_post_path(@course, post) %></h4>
                    <p> <small>
                        <%= link_to post.course.name, course_path(post.course)%>
                        Posted by <%= link_to post.account.full_name, profile_path(post.account.utorid)%> 
                        <%= time_ago_in_words post.created_at %> ago
                    </small></p>
                    <p><%= truncate post.body, length: 200 %></p>

                </div>
            <% end %>
        </div>
    </div>

    <div class="col-sm-4 float-right">
        <div class="card p-3">
            <h5> About this course </h5>
            <%= @course.summary %>
            <small>
                <p><h6>Course Page Rules</h4><%= simple_format @course.rules%></p> 
            </small>
            <p> <%= pluralize @subscriber_count, "member" %> </p>
        </div>
    </div>
</div>