<%= link_to "Create New Post", new_course_post_path(@course), class: "btn btn-primary float-right"%>

<%= @course.name%>

<% @posts.each do |post| %>
    <h4><%= link_to post.title, course_post_path(@course, post) %></h4>
    <p><%= truncate post.body, length: 200 %></p>
<% end %>

<small>
    <p><%= simple_format @course.rules%></p> 
</small>