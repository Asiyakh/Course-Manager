<div class="row">
    <div class="col-sm-12 mt-3">
        <% if account_signed_in? %>
            <div class="float-right mt-3">
                <%= link_to "Create New Course", new_course_path, class: "btn btn-outline-primary"%>
            </div>
        <% end %>
    </div>

    </div class="card">
        <div class="col">
            <% if @courses.size > 0 %>
                <% @courses.each do |course|%>
                        <h5><%= link_to course.name, course %></h5>
                        <p><%= simple_format course.summary %></p>
                <% end%>
            <% else %>
                <p> No courses to display. </p>
            <% end %>
        </div>
    </div>
</div>